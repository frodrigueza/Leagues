<%= render layout:'versions/version' do %>
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>Grupos</h1>
            </div>
        </div>
    </div>

    <% @version.stages.each do |s| %>
        <h2><% s.name %></h2>

        <% s.groups.each do |g| %>
            <h3><%= g.name %></h3>
            <table>
                <% g.inscriptions.each do |i| %>
                    <tr>
                        <td><%= link_to i.team.name, version_inscription_path(@version, i) %></td>
                    </tr>
                <% end %>
            </table>
        <% end %>
    <% end %>
<% end %>